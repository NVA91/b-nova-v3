# NOVA v3 Environment Configuration
# Environment Variables for b-nova-v3 Docker Services

# ============================================================================
# DOMAIN & SSL
# ============================================================================

DOMAIN=localhost
ACME_EMAIL=admin@example.com

# ============================================================================
# SECURITY
# ============================================================================

SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ============================================================================
# APPLICATION
# ============================================================================

DEBUG=false
ENVIRONMENT=production

# ============================================================================
# DATABASE
# ============================================================================

POSTGRES_DB=nova_v3
POSTGRES_USER=nova
POSTGRES_PASSWORD=nova_password
DB_USER=nova
DB_PASSWORD=nova_password
DB_NAME=nova_v3

# ============================================================================
# REDIS
# ============================================================================

REDIS_PASSWORD=change_me_redis_password

# ============================================================================
# API
# ============================================================================

API_URL=http://localhost/api
VITE_API_URL=http://localhost/api

# ============================================================================
# AI SERVICE / GPU (optional)
# ============================================================================
# Falls du NVIDIA GPU-Passthrough nutzt:
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# ============================================================================
# TRAEFIK
# ============================================================================

# Generate with: htpasswd -nb admin yourpassword
# Example: admin:$apr1$xyz...
TRAEFIK_DASHBOARD_AUTH=

# ============================================================================
# GRAFANA
# ============================================================================

GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme

# ============================================================================
# PROXMOX
# ============================================================================

PROXMOX_HOST=192.168.2.77
PROXMOX_USER=monitoring
PROXMOX_PASSWORD=changeme

# ============================================================================
# BACKUP
# ============================================================================

BACKUP_RETENTION_DAYS=30
