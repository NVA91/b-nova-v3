# Template: egpu_nvidia.yml.j2
# Snippet to be merged into a hardware_profile document

gpu:
  egpu:
    enabled: true
    dock:
      model: "{{ egpu.dock_model | default('') }}"
      interface: "{{ egpu.dock_interface | default('OCuLink (PCIe Gen4 x4)') }}"
    model: "{{ egpu.model | default('NVIDIA GeForce') }}"
    vram_gb: {{ egpu.vram_gb | default(16) }}
    passthrough:
      enabled: {{ egpu.passthrough_enabled | default(true) }}
      pci_id: "{{ egpu.pci_id | default('0000:01:00.0') }}"
      audio_pci_id: "{{ egpu.audio_pci_id | default('0000:01:00.1') }}"
      pci_device_id: "{{ egpu.pci_device_id | default('10de:2d04') }}"
      audio_device_id: "{{ egpu.audio_device_id | default('10de:22eb') }}"
