# AWX Controller Environment Variables
# Copy this file to .env and configure with secure values

# ============================================================================
# AWX Core Configuration
# ============================================================================

# AWX Secret Key (generate with: openssl rand -hex 32)
AWX_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# AWX Admin Credentials
AWX_ADMIN_USER=admin
AWX_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================================================
# Database Configuration
# ============================================================================

POSTGRES_USER=awx
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD
POSTGRES_DB=awx
POSTGRES_HOST=awx-postgres
POSTGRES_PORT=5432

# ============================================================================
# Network Configuration
# ============================================================================

# AWX Web Interface Port
AWX_WEB_PORT=8080

# AWX Task Manager Port
AWX_TASK_PORT=8052

# ============================================================================
# Volume Paths
# ============================================================================

# Path to your Ansible project (will be mounted read-only)
ANSIBLE_PROJECT_PATH=../../ansible

# Path to SSH keys for Ansible connections
SSH_KEY_PATH=${HOME}/.ssh

# ============================================================================
# AWX Configuration
# ============================================================================

# AWX Version (use latest stable)
AWX_VERSION=24.6.1

# AWX Task Manager Settings
AWX_TASK_MEM_LIMIT=2048
AWX_TASK_CPU_LIMIT=1.5

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_HOST=awx-redis
REDIS_PORT=6379

# ============================================================================
# Logging
# ============================================================================

AWX_LOG_LEVEL=INFO
